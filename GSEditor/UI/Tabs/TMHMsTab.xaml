                      Margin="0, 0, 0, 8">
            <Button Name="PokemonCheckAllButton"
                    Padding="16, 4, 16, 4"
                    Margin="0, 0, 4, 0"
                    Click="OnPokemonButtonClick">모두 체크</Button>
            <Button Name="PokemonClearButton"
                    Padding="16, 4, 16, 4"
                    Margin="0, 0, 4, 0"
                    Click="OnPokemonButtonClick">모두 해제</Button>
          </StackPanel>
